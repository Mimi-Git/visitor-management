      },
      {
        "Endpoint": "*:/api/*",
        "Period": "15m",
        "Limit": 25
      },
      {
        "Endpoint": "*:/api/*",
        "Period": "12h",
        "Limit": 500
      },
      {
        "Endpoint": "*:/api/*",
        "Period": "7d",
        "Limit": 1000
      },
      {
        "Endpoint": "*:/health",
        "Period": "10s",
        "Limit": 1
      }
    ]
  }
}